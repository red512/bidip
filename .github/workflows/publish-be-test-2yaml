name: Publish BE - TEST (not in use)

on:
  workflow_dispatch:

env:
  DOCKER_HUB_IMAGE: projectred521/flask-ip
  IMAGE_TAG: ${{ secrets.MAJOR }}.${{ secrets.MINOR }}

jobs:
  publish_image:
    runs-on: ubuntu-latest 
    defaults:
      run:
        working-directory: be-flask

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Build Docker image
        run: |
          docker build . -t $DOCKER_HUB_IMAGE:$IMAGE_TAG
        continue-on-error: true

      - name: Publish Docker image
        env:
          DOCKER_HUB_USERNAME: ${{ secrets.DOCKER_HUB_USERNAME }}
          DOCKER_HUB_TOKEN: ${{ secrets.DOCKER_HUB_TOKEN }}
        run: |
          docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_TOKEN
          docker push $DOCKER_HUB_IMAGE:$IMAGE_TAG

            run: docker push eriksongm/master-report:${{ secrets.MAJOR }}.${{ secrets.MINOR }}

      - name: Update Minor version
        uses: hmanzur/actions-set-secret@v2.0.0
        with:
          name: 'MINOR'
          value: $((${{ secrets.MINOR }}+1))
          repository: projectred521/flask-ip
          token: ${{ secrets.REPO_ACCESS_TOKEN }}

      - name: Clean up Docker images
        run: |
          docker image prune -f

      - name: Notify on success
        if: success()
        run: |
          curl -X POST -H 'Content-type: application/json' --data '{"text":"The BE publishing is succeeded for ${{ github.repository }} :rocket:"}' ${{ secrets.SLACK_WEBHOOK_URL }}

      - name: Notify on failure
        if: failure()
        run: |
          curl -X POST -H 'Content-type: application/json' --data '{"text":"The BE publishing is failed for ${{ github.repository }} :x:"}' ${{ secrets.SLACK_WEBHOOK_URL }}